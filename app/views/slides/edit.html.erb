<style type="text/css">
	#edit-wrapper {
		width: 400px;
		margin-left: auto;
		margin-right: auto;
		margin-top: 50px;
	}
	body, h3 {
		font-family: 'Source Sans Pro', sans-serif;
		font-weight: 100;
	}
	#edit-wrapper label, #edit-wrapper p {
		font-family: 'Source Sans Pro', sans-serif;
		font-weight: 100;
		text-align: left;
		color: #FFF;
		font-size: 12px;
	}
</style>

<%if flash[:error_slide_update]%>
	<script type="text/javascript">
		alert("Error updating slide");
	</script>
<%end%>
<%= render :partial => 'banner/banner' %>
<div id="edit-wrapper">
<%= form_for @slide, url: slide_path(@slide), method: :patch do |f| %>	
		<h3 style="color: #FFF; font-size: 20px;">Edit Article</h3><hr />
		<%= f.label :title %><br />
		<%= f.text_field :title %><br />
		<%= f.label :description %><br />
		<%= f.text_area :description, :size => "30x10" %><br />
		<%= f.label :image %><br />
		<%= f.file_field :photo%><p>Note: Please make sure your image size is 960px X 655px</p>
		<div style="width: 50px; margin-left: auto; margin-right:auto;">
			<%= f.submit "Update"%>
		</div>
<% end %>
</div>
