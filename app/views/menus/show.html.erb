		}

		#menu-page-header select {
			/*background: #551950;
			color: #FFF;
			border-style: .5px solid #2a0c28;*/
			font-family: 'Source Sans Pro', sans-serif;
			font-weight: 300;
			font-size: 13px;
			width: 200px;

		}
	  </style>
	  <script type="text/javascript">
	  $document.ready(function(){
	  	$('#qty').keyup(function(){
        	$('#subamount').html($(this).val());
    	});
	  });
