<style type="text/css">
	#edit-wrapper {
		width: 400px;
		margin-left: auto;
		margin-right: auto;
		margin-top: 50px;
	}
	body, h3 {
		font-family: 'Source Sans Pro', sans-serif;
		font-weight: 100;
	}
	#edit-wrapper label, #edit-wrapper p {
		font-family: 'Source Sans Pro', sans-serif;
		font-weight: 100;
		text-align: left;
		color: #FFF;
		font-size: 14px;
	}
</style>


<%= render :partial => 'banner/banner' %>
<div id="edit-wrapper">
<%= form_for @user, url: user_path(@user), method: :patch do |f| %>	
		<h3 style="color: #FFF; font-size: 20px;">User Settings</h3><hr />
		<%= f.label :photo %><br />
		<%= f.file_field :photo%><br />
		<%= f.label :name %><br />
		<%= f.text_field :name %><br />
		<%= f.label :mobile %><br />
		<%= f.text_field :phone %><br />
		<%= f.label :email %><br />
		<%= f.text_field :email  %><br />
		<%= f.label :role %><br />
		<%= f.text_field :role  %><br />
		<div style="width: 50px; margin-left: auto; margin-right:auto;">
			<%= f.submit "Update"%>
		</div>
<% end %>
</div>
