<style type="text/css">
	label, p {
		font-family: 'Source Sans Pro', sans-serif;
		font-weight: 100;
		text-align: left;
		color: #FFF;
		font-size: 12px;
	}
</style>

<hr /><br />
<%= form_for inquiry do |f| %>
	<div>
	<%= f.label :name %><br/>
	<%= f.text_field :name %>
	</div>
	<div>
	<%= f.label :email %><br/>
	<%= f.text_field :email %>
	</div>
	<div>
	<%= f.label :message %><br/>
	<%= f.text_area :message, :size => "45x10" %>
	</div>
	<div style="width: 75px; margin-left: auto; margin-right: auto;">
	<%= f.submit "Send" %>
	</div>
<% end %>